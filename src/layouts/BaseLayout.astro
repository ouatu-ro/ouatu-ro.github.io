---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { site } from "../config/site";

interface Props {
  title?: string;
  description?: string;
  image?: string;
  mainClass?: string;
  bodyClass?: string;
}

const {
  title = site.title,
  description = site.description,
  image,
  mainClass = "",
  bodyClass = "",
} = Astro.props as Props;

const normalizedBodyClass = bodyClass?.trim();
const normalizedMainClass = mainClass?.trim();
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} image={image} />
    <slot name="head" />
  </head>
  <body class={normalizedBodyClass || undefined}>
    <Header />
    <main class={normalizedMainClass || undefined}>
      <slot />
    </main>
    <Footer />
    <slot name="foot" />
    <script is:inline type="module" src="/src/scripts/main.ts"></script>
  </body>
</html>

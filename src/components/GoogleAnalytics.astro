---
import { site } from "../config/site";
const GA_ID = site.gaTrackingId;
const isProduction = import.meta.env.PROD;
---

{
  isProduction && GA_ID && (
    <>
      <script
        is:inline
        async
        src={`https://www.googletagmanager.com/gtag/js?id=${GA_ID}`}
      />
      <script is:inline src="/src/scripts/google-analytics.ts" />
    </>
  )
}

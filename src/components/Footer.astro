---
import { site } from "../config/site";
import Icon from "../components/Icons.astro";

const today = new Date();
---

<footer>
  <p class="u-heading-font footer-heading">You can also find me here</p>
  <div class="social-links">
    <a
      href={site.linkedinUrl}
      class="social-icon"
      target="_blank"
      aria-label="LinkedIn Profile"
    >
      <Icon name="linkedin" />
    </a>
    <a
      href={site.githubUrl}
      class="social-icon"
      target="_blank"
      aria-label="GitHub Profile"
    >
      <Icon name="github" />
    </a>
    <a
      href={site.kaggleUrl}
      class="social-icon"
      target="_blank"
      aria-label="Kaggle Profile"
    >
      <Icon name="kaggle" />
    </a>
  </div>

  <div class="rss-section">
    <p class="u-heading-font footer-subheading">Subscribe via RSS</p>
    <div class="rss-links">
      <a
        href="/rss.xml"
        class="rss-link-footer"
        title="Subscribe to all content"
      >
        <Icon name="rss" /> All Content
      </a>
      <a
        href="/blog/rss.xml"
        class="rss-link-footer"
        title="Subscribe to the blog (RSS)"
      >
        <Icon name="rss" /> Blog RSS
      </a>
      <a
        href="/blog/feed.json"
        class="rss-link-footer"
        title="Subscribe to the blog (JSON Feed)"
      >
        <Icon name="rss" /> Blog JSON
      </a>
      <a
        href="/projects-rss.xml"
        class="rss-link-footer"
        title="Subscribe to projects"
      >
        <Icon name="rss" /> Projects
      </a>
    </div>
  </div>

  <p>&copy; {today.getFullYear()} {site.author}. All rights reserved.</p>
</footer>

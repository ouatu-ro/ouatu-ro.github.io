---
interface Props extends Record<string, any> {
  project: {
    name: string;
  };
  trimmedDescription: string;
}

const { project, trimmedDescription } = Astro.props;
---

<div class="wireframe-device">
  <div class="wireframe-screen">
    <span class="wireframe-title">{project.name}</span>
    <!-- <span class="wireframe-subtitle">{trimmedDescription}</span> TODO: fix -->
  </div>
</div>

<style>
  :global(.project-card-media--wireframe) {
    background:
      radial-gradient(
        circle at top,
        rgba(120, 80, 255, 0.35),
        rgba(11, 7, 22, 0.95)
      ),
      linear-gradient(190deg, rgba(62, 52, 128, 0.32), rgba(10, 5, 25, 0.86));
    perspective: 1200px;
  }

  .wireframe-device {
    width: 84%;
    aspect-ratio: 16 / 10;
    border-radius: 20px;
    border: 1px solid rgba(210, 180, 255, 0.55);
    position: relative;
    transform: rotateX(12deg) rotateY(-8deg);
    box-shadow: 0 18px 28px rgba(100, 60, 200, 0.35);
    overflow: hidden;
    background: linear-gradient(
      140deg,
      rgba(120, 80, 255, 0.24),
      rgba(255, 255, 255, 0.14)
    );
    transition: transform 260ms ease;
  }

  :global(.project-card-link:hover) .wireframe-device,
  :global(.project-card-link:focus-visible) .wireframe-device {
    transform: rotateX(6deg) rotateY(-4deg) translateY(-6px);
  }

  .wireframe-screen {
    position: absolute;
    inset: 9%;
    border-radius: 14px;
    background: linear-gradient(
      160deg,
      rgba(255, 255, 255, 0.22),
      rgba(255, 255, 255, 0.05)
    );
    display: grid;
    place-content: center;
    text-align: center;
    backdrop-filter: blur(12px);
    border: 1px solid rgba(210, 180, 255, 0.4);
    color: rgba(255, 255, 255, 0.92);
    padding: 0 1rem;
  }

  .wireframe-title {
    font-size: 1.1rem;
    margin-bottom: 0.25rem;
    letter-spacing: 0.08em;
  }

  .wireframe-subtitle {
    font-size: 0.8rem;
    opacity: 0.7;
  }
</style>

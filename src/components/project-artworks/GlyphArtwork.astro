---
import type { ProjectRecord } from "../../lib/projects";

interface Props {
  project: ProjectRecord;
}

const { project } = Astro.props as Props;
const label = getLabel(project.name);
const displayText = (project.name ?? label).toUpperCase();

function getLabel(name: string) {
  return name.slice(0, 2).toUpperCase();
}
---

<>
  <span class="glyph-shape"></span>
  <span class="glyph-icon">{displayText}</span>
</>

<style>
  :global(.project-card-media--glyph) {
    background: conic-gradient(
      from 130deg at 50% 50%,
      #3422ff,
      #0cc0ff,
      #ff4b95,
      #3422ff
    );
    position: relative;
  }

  .glyph-shape {
    width: 62%;
    aspect-ratio: 1 / 1;
    border-radius: 38% 62% 71% 29% / 41% 45% 55% 59%;
    background: rgba(255, 255, 255, 0.2);
    filter: blur(4px);
    position: absolute;
    inset: 0;
    margin: auto;
    animation: glyphPulse 6s ease-in-out infinite;
  }

  .glyph-icon {
    position: relative;
    font-size: clamp(1.7rem, 3.4vw, 2.8rem);
    font-weight: 700;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    max-width: 80%;
    line-height: 1.25;
    text-align: left;
    white-space: normal;
  }

  @keyframes glyphPulse {
    0%,
    100% {
      transform: rotate(0deg) scale(1);
    }
    50% {
      transform: rotate(6deg) scale(1.08);
    }
  }
</style>

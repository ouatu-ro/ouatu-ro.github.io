---
import BaseHead from "../../components/BaseHead.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";
import { getCollection } from "astro:content";
import FormattedDate from "../../components/FormattedDate.astro";
import "../../styles/blog.css";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      /* Global wrapper to fix overflow */
      html,
      body {
        width: 100%;
        max-width: 100vw;
        overflow-x: hidden;
      }

      /* Main Content */
      main {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem 1rem;
        width: 100%;
        box-sizing: border-box;
      }

      /* Blog Post Grid */
      ul {
        display: flex;
        flex-wrap: wrap;
        gap: 4.5rem;
        list-style-type: none;
        margin: 0;
        padding: 0;
        align-items: stretch;
        width: 100%;
        box-sizing: border-box;
      }

      /* First post full width, others in two columns */
      ul li {
        width: calc(50% - 2.25rem);
        display: flex;
        flex-direction: column;
        padding-bottom: 1rem;
        margin-bottom: 1rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        box-sizing: border-box;
      }

      /* First blog post takes full width */
      ul li:first-child {
        width: 100%;
        text-align: center;
        padding-bottom: 2rem;
        margin-bottom: 2rem;
      }

      ul li:first-child img {
        width: 100%;
      }

      /* Blog Post Images */
      ul li img {
        width: 100%;
        height: auto;
        object-fit: cover;
        margin-bottom: 0.5rem;
        border-radius: 12px;
      }

      /* Blog Post Title */
      .title {
        margin: 0;
        color: #ffffff;
        font-size: 1.5rem;
        font-weight: bold;
      }

      /* Blog Post Date */
      .date {
        margin: 0.3rem 0;
        color: rgb(180, 180, 180);
        font-size: 1rem;
      }

      /* Fallback for missing hero images */
      .title-fallback {
        width: 100%;
        height: 200px;
        background: linear-gradient(135deg, #2a2139 0%, #3b294f 100%);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 0.5rem;
        padding: 1.5rem;
        text-align: center;
        box-sizing: border-box;
        position: relative;
        overflow: hidden;
        box-shadow: inset 0 0 30px rgba(138, 43, 226, 0.2);
      }

      /* Decorative elements */
      .title-fallback::before {
        content: "";
        position: absolute;
        top: -10px;
        right: -10px;
        width: 80px;
        height: 80px;
        background: radial-gradient(
          circle,
          rgba(138, 43, 226, 0.4) 0%,
          rgba(138, 43, 226, 0) 70%
        );
        border-radius: 50%;
        z-index: 1;
      }

      .title-fallback::after {
        content: "";
        position: absolute;
        bottom: -20px;
        left: -20px;
        width: 120px;
        height: 120px;
        background: radial-gradient(
          circle,
          rgba(138, 43, 226, 0.3) 0%,
          rgba(138, 43, 226, 0) 70%
        );
        border-radius: 50%;
        z-index: 1;
      }

      .title-fallback h3 {
        color: #ffffff;
        font-size: 1.7rem;
        font-weight: bold;
        text-shadow: 0 2px 8px rgba(138, 43, 226, 0.6);
        margin: 0;
        font-family: "Georgia", serif;
        line-height: 1.4;
        z-index: 2;
        position: relative;
        letter-spacing: 0.5px;
        padding: 0.8rem 1.8rem;
        background: rgba(0, 0, 0, 0.2);
        border-radius: 8px;
        border: 1px solid rgba(138, 43, 226, 0.3);
        backdrop-filter: blur(2px);
        max-width: 90%;
        width: auto;
        display: inline-block;
        word-wrap: break-word;
        overflow-wrap: break-word;
        hyphens: auto;
      }

      /* Decorative quotes for the first and last words */
      .title-fallback h3::before,
      .title-fallback h3::after {
        content: '"';
        font-size: 2.2rem;
        position: absolute;
        opacity: 0.7;
        color: rgba(138, 43, 226, 0.8);
        display: inline-block;
      }

      .title-fallback h3::before {
        left: 5px;
        top: -8px;
      }

      .title-fallback h3::after {
        right: 5px;
        bottom: -20px;
      }

      ul li:first-child .title-fallback {
        height: 360px;
      }

      ul li:first-child .title-fallback h3 {
        font-size: 2.3rem;
        padding: 1rem 2.5rem;
        max-width: 85%;
        line-height: 1.5;
      }

      /* Hover Effects */
      ul li a {
        display: block;
        text-decoration: none;
        transition: 0.2s ease-in-out;
        width: 100%;
      }

      ul li a:hover .title,
      ul li a:hover .date {
        color: rgb(var(--accent));
      }

      ul li a:hover img,
      ul li a:hover .title-fallback {
        box-shadow: 0 4px 20px rgba(138, 43, 226, 0.4);
      }

      ul li a:hover .title-fallback {
        background: linear-gradient(135deg, #2e2642 0%, #442f5e 100%);
      }

      ul li a:hover .title-fallback h3 {
        transform: scale(1.02);
        transition: transform 0.3s ease;
        border: 1px solid rgba(138, 43, 226, 0.5);
      }

      /* Responsive Fix for Smaller Screens */
      @media (max-width: 720px) {
        ul {
          flex-direction: column;
          gap: 2rem;
          width: 100%;
        }

        ul li {
          width: 100%;
          text-align: center;
          padding-bottom: 2rem;
          margin-bottom: 0;
        }

        .title {
          font-size: 1.3rem;
        }

        .title-fallback {
          height: 200px;
          padding: 1rem;
        }

        .title-fallback h3 {
          font-size: 1.4rem;
          padding: 0.6rem 1.2rem;
          max-width: 95%;
          line-height: 1.4;
        }

        ul li:first-child .title-fallback {
          height: 280px;
        }

        ul li:first-child .title-fallback h3 {
          font-size: 1.8rem;
          padding: 0.8rem 1.5rem;
          max-width: 90%;
        }
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <section>
        <ul>
          {
            posts.map((post) => (
              <li>
                <a href={`/blog/${post.id}/`}>
                  {post.data.heroImage ? (
                    <img
                      width={720}
                      height={360}
                      src={post.data.heroImage}
                      alt=""
                    />
                  ) : (
                    <div class="title-fallback">
                      <h3>{post.data.title}</h3>
                    </div>
                  )}
                  <h4 class="title">{post.data.title}</h4>
                  <p class="date">
                    <FormattedDate date={post.data.pubDate} />
                  </p>
                </a>
              </li>
            ))
          }
        </ul>
      </section>
    </main>
    <Footer />
  </body>
</html>

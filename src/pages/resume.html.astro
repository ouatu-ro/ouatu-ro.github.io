---
const destination = "/resume/";
const site = Astro.site ?? "https://ouatu.ro/";
const canonical = new URL(destination, site).toString();
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Redirecting…</title>
    <meta http-equiv="refresh" content={`0; url=${destination}`} />
    <link rel="canonical" href={canonical} />
    <script set:html={`window.location.replace(${JSON.stringify(destination)});`}></script>
  </head>
  <body>
    <p>
      Redirecting to <a href={destination}>{canonical}</a>…
    </p>
  </body>
</html>

{
  "name": "bogdan-ouatu-blog",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "watch:notebooks": "node scripts/convert-notebooks.mjs",
    "watch:notebooks:bg": "node scripts/convert-notebooks.mjs > logs/notebook-watcher.log 2>&1 &",
    "watch:notebooks:stop": "ps aux | grep 'node scripts/convert-notebooks' | grep -v grep | awk '{print $2}' | xargs -r kill -9",
    "watch:notebooks:log": "tail -f logs/notebook-watcher.log",
    "dev:all": "npm-run-all --parallel dev watch:notebooks",
    "lint:css": "stylelint 'src/**/*.css'",
    "lint:css:fix": "stylelint 'src/**/*.css' --fix",
    "lint:all": "pnpm lint:css && pnpm check:format",
    "format": "prettier --write .",
    "check:format": "prettier --check .",
    "ci-build": "node .github/workflows/update-projects-script.cjs && pnpm build"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.3",
    "@astrojs/rss": "^4.0.12",
    "@astrojs/sitemap": "^3.4.2",
    "astro": "^5.12.8",
    "katex": "^0.16.22",
    "markdown-it": "^14.1.0",
    "rehype-katex": "^7.0.1",
    "remark-math": "^6.0.0",
    "sanitize-html": "^2.17.0",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.5",
    "@types/markdown-it": "^14.1.2",
    "@types/sanitize-html": "^2.16.0",
    "gray-matter": "^4.0.3",
    "node-fetch": "^2.7.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3",
    "prettier-plugin-astro": "^0.14.1",
    "stylelint": "^16.25.0",
    "stylelint-config-recommended": "^17.0.0",
    "stylelint-config-standard": "^39.0.0",
    "stylelint-order": "^7.0.0",
    "typescript": "^5.9.3",
    "vite-plugin-compression": "^0.5.1"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp"
    ]
  }
}
